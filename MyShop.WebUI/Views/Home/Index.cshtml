@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>
@foreach(var item in Model)
{
    <div class=" col-md-20" style="height:450px;padding:10px;margin:10px;border:solid thin white;"/>
        <div class="col-md-15">
            <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-20">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
        </div>
        <div class="col-md-20">
            <p>@item.Description</p>
        </div>
        <div class="col-md-20">
            <h4>@item.Price</h4>
        </div>
        <div class="col-md-20">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>
}
    <div class="cold-md-20 clearfix"/>