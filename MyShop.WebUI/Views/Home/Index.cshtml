@model MyShop.Core.ViewModels.ProductListViewModel 

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>


<div class=" =col-md-2" style="display:inline-block">
    <h2> Filter by Category </h2>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item active" : "list-group-item"})
        @foreach (var cat in Model.ProductCategories)
        {
            @Html.ActionLink(cat.Category, "Index", new {Category = cat.Category }, new { @class = Request["Category"] == cat.Category ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>
<div class="col-md-10">




    <table class="table">
      

        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    <div class=" col-md-20" style="height:350px; width:800px; padding:10px;margin:10px;border:solid thin white;" />
                    <div class="col-md-15">
                        <img class="img" style="height:200px; width:200px;border-radius: 25px;" src="~/Content/ProductImages/@item.Image" />

                        <span class="col-md-20" style="padding:10px;font-size:15px; ">@item.Description</span>
                    </div>
                    <div class="col-md-20">
                        <h1><strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong></h1>
                    </div>

                    <div class="col-md-20">
                        <h2>
                            @item.Price
                        <a href="@Url.Action("AddToBasket", "Basket", new { Id=item.Id})" class="btn btn-default">Add to Basket</a>
                    </h2>
                </div>

            </td>


            </tr>
         }

    </table>
</div>


<div class="cold-md-20 clearfix" />